<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavBg">
        <item name="android:background">@color/white_universal</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">?attr/colorOnContainer</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="fontWeight">@dimen/fontWeight700</item>
    </style>

    <style name="TextMedium">
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">@dimen/fontWeight500</item>
    </style>

    <style name="TextMedium.22">
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="TextMedium.16">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextRegular">
        <item name="android:textColor">?attr/android:textColorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">@dimen/fontWeight400</item>
    </style>

    <style name="TextRegular.16">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextRegular.12">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="SearchField">
        <item name="android:background">@drawable/bg_searchfield</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">55</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_64dp</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="contentInsetStartWithNavigation">@dimen/_12dp</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/_22sp</item>
        <item name="android:fontWeight">@dimen/fontWeight500</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">@dimen/_36dp</item>
        <item name="android:layout_height">@dimen/_36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <style name="ErrorPlaceholder">
        <item name="android:textAppearance">@style/TextMedium.22</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/_16dp</item>
        <item name="android:drawablePadding">@dimen/_16dp</item>
    </style>

    <style name="SearchStatus">
        <item name="android:background">@drawable/bg_search_status</item>
        <item name="android:paddingVertical">@dimen/_4dp</item>
        <item name="android:paddingHorizontal">@dimen/_12dp</item>
        <item name="android:layout_marginTop">@dimen/_12dp</item>
        <item name="android:textColor">@color/white_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="TextRegularGray">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">@dimen/fontWeight400</item>
    </style>

    <style name="ExpectedSalary">
        <item name="android:background">@drawable/bg_expected_salary</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">55</item>
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>
</resources>
