<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/area_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextRegular.16.text_filter_empty"
        tools:text="@string/empty_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/area_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="?attr/toolbarIconColor"
        android:contentDescription="@null"
        android:src="@drawable/ic_arrow_forward"
        android:layout_marginEnd="@dimen/_16dp"
        app:layout_constraintBottom_toBottomOf="@id/area_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/area_text" />
</androidx.constraintlayout.widget.ConstraintLayout>
