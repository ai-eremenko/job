<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.search.SearchFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/search_toolbar"
        style="@style/ToolbarStyle"
        android:paddingStart="@dimen/margin_16"
        app:menu="@menu/filter_ic_toolbar"
        app:title="@string/title_main"
        app:titleTextAppearance="@style/TitleStyle" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@drawable/rounded_corners_search">

        <EditText
            android:id="@+id/search_input_text"
            android:layout_width="316dp"
            android:layout_height="48dp"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@null"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/hint_enter_your_request"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLength="100"
            android:maxLines="1"
            android:paddingStart="@dimen/margin_16"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/search_cursor_color"
            android:textSize="@dimen/size_text_16" />

        <ImageView
            android:id="@+id/search_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:src="@drawable/ic_search_24" />
    </FrameLayout>

    <TextView
        android:id="@+id/search_count_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:background="@drawable/rounded_corners_search_result"
        android:fontFamily="@font/ys_display_regular"
        android:paddingHorizontal="@dimen/margin_12"
        android:paddingVertical="@dimen/margin_4"
        android:textColor="@color/white"
        android:textSize="@dimen/size_text_16"
        android:visibility="gone"
        tools:text="@string/text_found_vacancies_example" />

    <ImageView
        android:id="@+id/search_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="156dp"
        android:src="@drawable/search_placeholder" />

    <TextView
        android:id="@+id/search_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_16"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/size_text_22"
        android:visibility="gone"
        tools:text="@string/placeholder_no_internet" />

    <ProgressBar
        android:id="@+id/search_progress_bar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="244dp"
        android:indeterminateTint="@color/blue"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_weight="1"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <ProgressBar
        android:id="@+id/paginationProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:indeterminateTint="@color/blue"
        android:visibility="gone" />

</LinearLayout>
