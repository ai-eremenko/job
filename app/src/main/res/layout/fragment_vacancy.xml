<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.vacancy.VacancyFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:background="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/vacancy_for_screen"
        app:titleTextAppearance="@style/ToolbarTitle"
        app:titleTextColor="?attr/colorOnSurface"/>

    <ImageView
        android:id="@+id/iv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorites_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/iv_sharing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sharing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf ="@id/iv_favorite"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sv_vacancy_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name_vacancy"
                style="@style/boldText_32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Android-разработчик"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_salary_vacancy"
                style="@style/mediumText_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_name_vacancy"
                app:layout_constraintStart_toStartOf="@+id/tv_name_vacancy"
                app:layout_constraintTop_toBottomOf="@+id/tv_name_vacancy"
                tools:text="от 100 000 Р"/>

            <TextView
                android:id="@+id/tv_email"
                style="@style/mediumText_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                app:layout_constraintEnd_toEndOf="@id/tv_name_vacancy"
                app:layout_constraintStart_toStartOf="@id/tv_name_vacancy"
                app:layout_constraintTop_toBottomOf="@id/tv_salary_vacancy"
                tools:text="email"/>

            <TextView
                android:id="@+id/tv_description"
                style="@style/mediumText_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_name_vacancy"
                app:layout_constraintStart_toStartOf="@+id/tv_name_vacancy"
                app:layout_constraintTop_toBottomOf="@+id/tv_salary_vacancy"
                tools:text="ста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста ммочень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста мочень много много текста мочень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста очень много много текста мочень много много текста очень много много текста очень много много текста очень много много текста очень много много текста "/>

            <LinearLayout
                android:id="@+id/phonesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_description"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/_48dp"
        android:layout_height="@dimen/_48dp"
        android:indeterminateTint="@color/blue"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_vacancy_not_found, tv_vacancy_not_found"/>
    <ImageView
        android:id="@+id/iv_vacancy_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"/>
    <TextView
        android:id="@+id/tv_vacancy_not_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_vacancy_not_found"
        android:text="@string/app_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>
