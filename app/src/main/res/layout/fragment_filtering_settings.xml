<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.filteringsettings.FilteringSettingsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolbarStyle"
        android:background="?attr/colorSurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/filtering_settings"
        app:titleTextAppearance="@style/ToolbarTitle"
        app:titleTextColor="?attr/colorOnSurface" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftBorder"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightBorder"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_workplace"
            style = "@style/HintAppearance"
            app:placeholderTextColor="@color/hint_text_color"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60dp"
            android:hint="@string/workplace"
            android:layout_marginTop="@dimen/_16dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:placeholderText="@string/workplace">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_workplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:inputType="none"
                android:cursorVisible="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/arrow_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            app:tint="?attr/toolbarIconColor"
            app:layout_constraintBottom_toBottomOf="@id/til_workplace"
            app:layout_constraintEnd_toEndOf="@id/rightBorder"
            app:layout_constraintTop_toTopOf="@id/til_workplace" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_industry"
            style = "@style/HintAppearance"
            app:placeholderTextColor="@color/hint_text_color"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60dp"
            android:hint="@string/industry"
            app:layout_constraintTop_toBottomOf="@id/til_workplace"
            app:placeholderText="@string/workplace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:inputType="none"
                android:cursorVisible="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/arrow_forward2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            app:tint="?attr/toolbarIconColor"
            app:layout_constraintBottom_toBottomOf="@id/til_industry"
            app:layout_constraintEnd_toEndOf="@id/rightBorder"
            app:layout_constraintTop_toTopOf="@id/til_industry" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/expected_salary_container"
        style = "@style/SalaryField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24dp"
        android:hint="@string/expected_salary"
        app:placeholderText="@string/enter_amount"
        app:placeholderTextColor="@color/hint_text_color"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toStartOf="@id/leftBorder"
        app:layout_constraintTop_toBottomOf="@id/til_industry">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/expected_salary"
            android:background="@drawable/bg_expected_salary"
            android:layout_width="match_parent"
            android:inputType="number"
            android:digits="0123456789"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:maxLength="10"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/clear_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12dp"
        android:src="@drawable/ic_close"
        app:tint="?attr/toolbarIconColor"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/expected_salary_container"
        app:layout_constraintBottom_toBottomOf="@id/expected_salary_container"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/materialCheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:layout_marginTop="24dp"
        android:enabled="true"
        android:layoutDirection="rtl"
        android:paddingStart="0dp"
        android:text="@string/without_salary"
        android:textAppearance="@style/TextRegular.16"
        android:textDirection="ltr"
        app:buttonTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expected_salary_container"
        app:useMaterialThemeColors="false" />

    <Button
        android:id="@+id/apply_button"
        android:textAppearance="@style/TextMedium.16"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60dp"
        android:layout_marginBottom="@dimen/_8dp"
        android:background="@drawable/bg_blue_button"
        android:text="@string/apply"
        android:textAllCaps="false"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/reset_button"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toStartOf="@id/leftBorder" />

    <Button
        android:id="@+id/reset_button"
        android:textAppearance="@style/TextMedium.16"
        android:textColor="@color/red"
        android:layout_width="0dp"
        android:layout_height="@dimen/_60dp"
        android:layout_marginBottom="@dimen/_24dp"
        android:background="@android:color/transparent"
        android:text="@string/reset"
        android:textAllCaps="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/rightBorder"
        app:layout_constraintStart_toStartOf="@id/leftBorder" />
</androidx.constraintlayout.widget.ConstraintLayout>
